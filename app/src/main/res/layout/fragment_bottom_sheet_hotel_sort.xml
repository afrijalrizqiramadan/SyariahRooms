<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_sort_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp">

            <TextView
                style="@style/Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sort_urut_berdasarkan"
                android:textColor="@color/grayish" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/h_dotted_line" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/rg_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_popularity"
                style="@style/Subhead.Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:tag="0"
                android:text="@string/hotel_list_popularity"
                android:theme="@style/MyRadioButton" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/grey_text_light" />

            <RadioButton
                android:id="@+id/rb_high_to_low"
                style="@style/Subhead.Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:tag="7"
                android:text="@string/hotel_list_price_desc"
                android:theme="@style/MyRadioButton" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/grey_text_light" />

            <RadioButton
                android:id="@+id/rb_cheapest"
                style="@style/Subhead.Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:tag="1"
                android:text="@string/hotel_list_price_asc"
                android:theme="@style/MyRadioButton" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/grey_text_light" />

            <RadioButton
                android:id="@+id/radio_button_nearest_location"
                style="@style/Subhead.Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:tag="2"
                android:text="@string/hotel_list_nearest_location"
                android:theme="@style/MyRadioButton"
                android:visibility="gone" />

            <View
                android:id="@+id/view_nearest_location"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/grey_text_light"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/rb_grade_desc"
                style="@style/Subhead.Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:tag="4"
                android:text="@string/hotel_list_star_desc"
                android:theme="@style/MyRadioButton" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/grey_text_light" />

            <RadioButton
                android:id="@+id/rb_grade_asc"
                style="@style/Subhead.Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:tag="3"
                android:text="@string/hotel_list_star_asc"
                android:theme="@style/MyRadioButton" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/grey_text_light" />

            <RadioButton
                android:id="@+id/rb_rating"
                style="@style/Subhead.Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:tag="8"
                android:text="@string/hotel_list_rating"
                android:theme="@style/MyRadioButton" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/grey_text_light" />

            <RadioButton
                android:id="@+id/rb_discount"
                style="@style/Subhead.Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:tag="4"
                android:text="@string/hotel_list_biggest_discount"
                android:theme="@style/MyRadioButton"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/grey_text_light" />
        </RadioGroup>
    </LinearLayout>
</ScrollView>
