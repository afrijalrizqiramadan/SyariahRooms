<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/boboboxLoginAccountContainerCL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <EditText
        android:id="@+id/boboboxLoginPhoneET"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/edittext_login_background"
        android:inputType="phone"
        android:paddingLeft="85dp"
        android:paddingRight="10dp"
        android:textSize="14sp"
        android:theme="@style/EditTextStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.rilixtech.CountryCodePicker
        android:id="@+id/boboboxLoginPhoneCountryCodeS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        app:ccp_defaultNameCode="ID"
        app:ccp_hideNameCode="true"
        app:ccp_textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/boboboxLoginPhoneET"
        app:layout_constraintLeft_toLeftOf="@+id/boboboxLoginPhoneET"
        app:layout_constraintTop_toTopOf="@+id/boboboxLoginPhoneET" />

    <TextView
        android:id="@+id/boboboxLoginPhoneNumberLabelTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:background="@android:color/white"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/phone_number"
        android:textColor="@color/mainTheme"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/boboboxLoginPhoneET"
        app:layout_constraintLeft_toLeftOf="@+id/boboboxLoginPhoneET"
        app:layout_constraintTop_toTopOf="@+id/boboboxLoginPhoneET" />

    <TextView
        android:id="@+id/boboboxLoginPhoneErrorTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/red"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/boboboxLoginPhoneET"
        app:layout_constraintTop_toBottomOf="@+id/boboboxLoginPhoneET" />
</androidx.constraintlayout.widget.ConstraintLayout>
