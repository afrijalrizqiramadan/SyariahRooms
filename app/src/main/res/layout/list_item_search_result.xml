<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/boboboxSearchResultContainerCV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/boboboxListItemSearchResultCL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/boboboxListItemSearchResultImageContainerCV"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            app:cardCornerRadius="5dp"
            app:layout_constraintLeft_toLeftOf="@+id/boboboxListItemSearchResultCL"
            app:layout_constraintTop_toTopOf="@+id/boboboxListItemSearchResultCL">

            <ImageView
                android:id="@+id/boboboxListItemSearchResultImageIV"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/round_corner_bobobox_white_no_border"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/search_result_hotel_place_holder" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/boboboxListItemSearchResulTypeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:text="Hotel"
            android:textColor="@color/giftCertificate"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/boboboxListItemSearchResultImageContainerCV"
            app:layout_constraintTop_toTopOf="@+id/boboboxListItemSearchResultCL" />

        <TextView
            android:id="@+id/boboboxListItemSearchResultDetailTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:layout_marginRight="26dp"
            android:text="Detail"
            android:textColor="@color/mainTheme"
            android:textSize="11sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="@+id/boboboxListItemSearchResultCL"
            app:layout_constraintTop_toTopOf="@+id/boboboxListItemSearchResultCL" />

        <TextView
            android:id="@+id/boboboxListItemSearchResultGuestLabelTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="2 Guests per room - 6 m"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/boboboxListItemSearchResulTypeTV"
            app:layout_constraintTop_toBottomOf="@+id/boboboxListItemSearchResulTypeTV" />

        <ImageView
            android:id="@+id/boboboxListItemSearchResultWifiIV"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="@+id/boboboxListItemSearchResulTypeTV"
            app:layout_constraintTop_toBottomOf="@+id/boboboxListItemSearchResultGuestLabelTV"
            app:srcCompat="@drawable/ic_wifi" />

        <TextView
            android:id="@+id/boboboxListItemSearchResultFacility1TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/free_wifi"
            android:textColor="@color/giftCertificate"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/boboboxListItemSearchResultWifiIV"
            app:layout_constraintLeft_toRightOf="@+id/boboboxListItemSearchResultWifiIV"
            app:layout_constraintTop_toTopOf="@+id/boboboxListItemSearchResultWifiIV" />

        <ImageView
            android:id="@+id/boboboxListItemSearchResultACIV"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="@+id/boboboxListItemSearchResulTypeTV"
            app:layout_constraintTop_toBottomOf="@+id/boboboxListItemSearchResultWifiIV"
            app:srcCompat="@drawable/ic_ac" />

        <TextView
            android:id="@+id/boboboxListItemSearchResultFacility2TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/air_conditioner"
            android:textColor="@color/giftCertificate"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/boboboxListItemSearchResultACIV"
            app:layout_constraintLeft_toRightOf="@+id/boboboxListItemSearchResultACIV"
            app:layout_constraintTop_toTopOf="@+id/boboboxListItemSearchResultACIV" />

        <ImageView
            android:id="@+id/boboboxListItemSearchResultControllerIV"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="@+id/boboboxListItemSearchResulTypeTV"
            app:layout_constraintTop_toBottomOf="@+id/boboboxListItemSearchResultACIV"
            app:srcCompat="@drawable/ic_controller" />

        <TextView
            android:id="@+id/boboboxListItemSearchResultFacility3TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/smart_pod_controller"
            android:textColor="@color/giftCertificate"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/boboboxListItemSearchResultControllerIV"
            app:layout_constraintLeft_toRightOf="@+id/boboboxListItemSearchResultControllerIV"
            app:layout_constraintTop_toTopOf="@+id/boboboxListItemSearchResultControllerIV" />


        <View
            android:id="@+id/boboboxListItemSearchResultLineView"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/lineGray"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/boboboxListItemSearchResultCL"
            app:layout_constraintRight_toRightOf="@+id/boboboxListItemSearchResultCL"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/boboboxListItemSearchResultPromoInfoTopGuideView"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/boboboxListItemSearchResultLineView" />

        <View
            android:id="@+id/boboboxListItemSearchResultPromoInfoGuideView"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/boboboxListItemSearchResultPromoInfoTV" />

        <TextView
            android:id="@+id/boboboxListItemSearchResultGiftCertificateInfoTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Certificate"
            android:textColor="@color/giftCertificate"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/boboboxListItemSearchResultLineView"
            app:layout_constraintRight_toRightOf="@+id/boboboxListItemSearchResultLineView"
            app:layout_constraintTop_toBottomOf="@+id/boboboxListItemSearchResultPromoInfoGuideView" />

        <View
            android:id="@+id/boboboxListItemSearchResultGifteCertificateInfoGuideView"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/boboboxListItemSearchResultGiftCertificateInfoTV" />

        <TextView
            android:id="@+id/boboboxListItemSearchResultPromoInfoTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Promo"
            android:textColor="@color/giftCertificate"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/boboboxListItemSearchResultTotalPriceLabelTV"
            app:layout_constraintTop_toBottomOf="@+id/boboboxListItemSearchResultPromoInfoTopGuideView" />

        <View
            android:id="@+id/boboboxListItemSearchResultLine2View"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="180dp"
            android:layout_marginRight="20dp"
            android:background="@color/lineGray"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="@+id/boboboxListItemSearchResultCL"
            app:layout_constraintRight_toRightOf="@+id/boboboxListItemSearchResultCL"
            app:layout_constraintTop_toBottomOf="@+id/boboboxListItemSearchResultGifteCertificateInfoGuideView" />

        <TextView
            android:id="@+id/boboboxListItemSearchResultTotalPriceLabelTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/total_price"
            android:textColor="@color/label"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@+id/boboboxListItemSearchResultImageContainerCV"
            app:layout_constraintTop_toBottomOf="@+id/boboboxListItemSearchResultLine2View" />

        <TextView
            android:id="@+id/boboboxListItemSearchResultTotalPriceNormalRpTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/rp"
            android:textSize="8sp"
            app:layout_constraintLeft_toLeftOf="@+id/boboboxListItemSearchResultImageContainerCV"
            app:layout_constraintRight_toLeftOf="@+id/boboboxListItemSearchResultTotalPriceNormalTV"
            app:layout_constraintTop_toTopOf="@+id/boboboxListItemSearchResultTotalPriceNormalTV" />

        <TextView
            android:id="@+id/boboboxListItemSearchResultTotalPriceNormalTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/text_strike_orange"
            android:text="950.000"
            android:textColor="@color/giftCertificate"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/boboboxListItemSearchResultTotalPriceNormalRpTV"
            app:layout_constraintTop_toBottomOf="@+id/boboboxListItemSearchResultTotalPriceLabelTV" />

        <View
            android:id="@+id/boboboxListItemSearchResultRpGuideView"
            android:layout_width="8dp"
            android:layout_height="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/boboboxListItemSearchResultTotalPriceNormalTV"
            app:layout_constraintLeft_toRightOf="@+id/boboboxListItemSearchResultTotalPriceNormalTV"
            app:layout_constraintTop_toTopOf="@+id/boboboxListItemSearchResultTotalPriceNormalTV" />

        <TextView
            android:id="@+id/boboboxListItemSearchResultTotalPriceDiscountRpTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/rp"
            android:textSize="8sp"
            app:layout_constraintLeft_toRightOf="@+id/boboboxListItemSearchResultRpGuideView"
            app:layout_constraintRight_toLeftOf="@+id/boboboxListItemSearchResultTotalPriceDiscountTV"
            app:layout_constraintTop_toTopOf="@+id/boboboxListItemSearchResultTotalPriceDiscountTV" />

        <TextView
            android:id="@+id/boboboxListItemSearchResultTotalPriceDiscountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="925.000"
            android:textColor="@color/giftCertificate"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/boboboxListItemSearchResultTotalPriceDiscountRpTV"
            app:layout_constraintTop_toTopOf="@+id/boboboxListItemSearchResultTotalPriceNormalTV" />


        <Button
            android:id="@+id/syariahListItemSearchResultBookingButton"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/round_corner_bobobox_button_orange_5dp"
            android:text="@string/booking"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/boboboxListItemSearchResultLine2View" />

        <TextView
            android:id="@+id/boboboxListItemSearchResultPriceDetailLabelTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/price_detail"
            android:textColor="@color/mainTheme"
            android:textSize="11sp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/boboboxListItemSearchResultCL"
            app:layout_constraintRight_toRightOf="@+id/boboboxListItemSearchResultCL"
            app:layout_constraintTop_toBottomOf="@+id/boboboxListItemSearchResultTotalPriceDiscountTV" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/boboboxListItemSearchResultPriceDetailLabelTV"
            app:layout_constraintRight_toRightOf="@+id/boboboxListItemSearchResultPriceDetailLabelTV"
            app:layout_constraintTop_toBottomOf="@+id/boboboxListItemSearchResultPriceDetailLabelTV"
            app:srcCompat="@drawable/ic_down" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
