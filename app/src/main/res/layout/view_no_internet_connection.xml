<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        style="@style/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/msg_warning" />

    <ImageView
        android:id="@+id/image_no_internet"
        android:layout_width="184dp"
        android:layout_height="184dp"
        android:src="@drawable/no_internet" />

    <TextView
        style="@style/Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="@string/no_internet_connection_label"
        android:textColor="@color/black_transparent2" />

    <TextView
        android:id="@+id/text_button_try"
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="48dp"
        android:text="@string/msg_try_again_all_caps" />
</LinearLayout>
